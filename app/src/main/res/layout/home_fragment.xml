<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/request_peers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/cash_register_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/device_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toRightOf="@id/request_peers"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="I am the group owner" />

    <TextView
        android:id="@+id/group_owner_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toRightOf="@id/request_peers"
        app:layout_constraintTop_toBottomOf="@id/device_info"
        tools:text="Group owner ip" />

    <TextView
        android:id="@+id/message_from_other_peer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toRightOf="@id/request_peers"
        app:layout_constraintTop_toBottomOf="@id/group_owner_ip_address"
        tools:text="Message from the other peer" />

    <TextView
        android:id="@+id/send_message"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_bg"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toRightOf="@id/request_peers"
        app:layout_constraintTop_toBottomOf="@id/message_from_other_peer"
        android:text="Send Message" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/peer_list"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_message" />


</android.support.constraint.ConstraintLayout>